<div class='columns is-multiline'>
  <div class='column is-3'>
    <%= render 'shared/sidebar'%>
  </div>

  <div class='column'>
    <nav class='navbar is-transparent'>
      <div class='navbar-start'>
        <h4 class='title is-4'>Home Page</h4>
      </div>
    </nav>

    <div class='card'>
      <div class='card-body'>
        <header class='card-header'>
          <figure class="image is-48x48">
            <%= image_tag('https://via.placeholder.com/150C/', class:'is-rounded') %>
          </figure>&nbsp;&nbsp;

          <strong><%= current_user.fullname? ? current_user.fullname : 'Sem nome' %></strong>
        </header>
        <%= render 'form', tweet: Tweet.new %>
      </div>
    </div><br>

    <div class='columns is-multiline'>
      <% @tweets.each do |tweet| %>
        <div class='column is-full'>
          <div class="card">
            <header class="card-header">
              <nav class='navbar-menu is-transparent'>
                <div class='navbar-start'>
                  <figure class="image is-32x32">
                    <%= image_tag('https://via.placeholder.com/150C/', class:'is-rounded') %>
                  </figure>&nbsp;&nbsp;
                  <p class='is-size-5'>
                    <strong><%= tweet.user.fullname? ? tweet.user.fullname : 'Sem nome' %></strong>
                  </p>
                </div>
                <div class='navbar-end'>
                  <%= link_to edit_users_backoffice_tweet_path(tweet) do %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                      <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
                    </svg>
                  <% end %> &nbsp;
                  <%= link_to users_backoffice_tweet_path(tweet), method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                      <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                    </svg>
                  <% end %> &nbsp;
                </div>
              </nav>
            </header>
            <div class="card-content">
              <div class="content">
                <%= tweet.declaration %>
              </div>
            </div>
            <footer class="card-footer">
              <div class='btn-group'>
                <%= link_to users_backoffice_like_tweet_path(tweet), method: :post do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-hand-thumbs-up-fill" viewBox="0 0 16 16">
                    <path d="M6.956 1.745C7.021.81 7.908.087 8.864.325l.261.066c.463.116.874.456 1.012.965.22.816.533 2.511.062 4.51a9.84 9.84 0 0 1 .443-.051c.713-.065 1.669-.072 2.516.21.518.173.994.681 1.2 1.273.184.532.16 1.162-.234 1.733.058.119.103.242.138.363.077.27.113.567.113.856 0 .289-.036.586-.113.856-.039.135-.09.273-.16.404.169.387.107.819-.003 1.148a3.163 3.163 0 0 1-.488.901c.054.152.076.312.076.465 0 .305-.089.625-.253.912C13.1 15.522 12.437 16 11.5 16H8c-.605 0-1.07-.081-1.466-.218a4.82 4.82 0 0 1-.97-.484l-.048-.03c-.504-.307-.999-.609-2.068-.722C2.682 14.464 2 13.846 2 13V9c0-.85.685-1.432 1.357-1.615.849-.232 1.574-.787 2.132-1.41.56-.627.914-1.28 1.039-1.639.199-.575.356-1.539.428-2.59z"/>
                  </svg>
                <% end %> &nbsp;
                <%= link_to users_backoffice_dislike_tweet_path(tweet), method: :post do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-hand-thumbs-down-fill" viewBox="0 0 16 16">
                    <path d="M6.956 14.534c.065.936.952 1.659 1.908 1.42l.261-.065a1.378 1.378 0 0 0 1.012-.965c.22-.816.533-2.512.062-4.51.136.02.285.037.443.051.713.065 1.669.071 2.516-.211.518-.173.994-.68 1.2-1.272a1.896 1.896 0 0 0-.234-1.734c.058-.118.103-.242.138-.362.077-.27.113-.568.113-.856 0-.29-.036-.586-.113-.857a2.094 2.094 0 0 0-.16-.403c.169-.387.107-.82-.003-1.149a3.162 3.162 0 0 0-.488-.9c.054-.153.076-.313.076-.465a1.86 1.86 0 0 0-.253-.912C13.1.757 12.437.28 11.5.28H8c-.605 0-1.07.08-1.466.217a4.823 4.823 0 0 0-.97.485l-.048.029c-.504.308-.999.61-2.068.723C2.682 1.815 2 2.434 2 3.279v4c0 .851.685 1.433 1.357 1.616.849.232 1.574.787 2.132 1.41.56.626.914 1.28 1.039 1.638.199.575.356 1.54.428 2.591z"/>
                  </svg>
                <% end %>
              </div>
            </footer>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>